/* 菜单栏样式 */
.list{
    border: 3rpx solid white;
   border-radius: 10rpx;
     padding: 10rpx;
     margin:20rpx 20rpx;
 }

.list-wrapper {
  width: 100%;
  
}

/* 横着的分割View样式 */
/*分割线样式*/
.div-line{
  background: #E0E3DA;
  width: 100%;
  height: 3rpx;
}

.list-item {
  width: 100%;
  height: 120rpx;
}

.list-item_active {
  background-color: #E0E3DA;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 110rpx;
}
.item-text {
  position:absolute;
  left: 100rpx;
  font-size: 38rpx;
}
.item-array {
    width: 5px;
    height: 5px;
    border-top: 2px solid #999;
    border-right: 2px solid #999;
    position: absolute;
    right: 40rpx;
    transform: rotate(45deg);
}

.item-image {
  position: absolute;
  left: 50rpx;
  width: 40rpx;
  height: 40rpx;
}
.button{
  margin: 50rpx;
  width:200rpx;
  height: 125rpx;
  border-radius: 100rpx;
  background-color:#fea06e;
  color: white;
  line-height: 35rpx;
  align-items: center;
  text-align: center;

}
.btnimg {
  margin-right: 8rpx;
  width: 46rpx;
  height: 46rpx;
}
.btnfont{
  font-weight: normal;
  font-size:30rpx;
}
.dibufont{
